@model ListaInstituicaoModel

@{
    ViewData["Title"] = "Lista de Instituições";
}

<section class="pt-3 pt-md-5 pb-md-5 pt-lg-8 bg-gray-200">
    <div class="container">
        <div class="row">
            <!--MENU LATERAL-->
            @if (ViewBag.perfil == "ADMIN")
            {
                <div class="col-lg-3 mb-lg-0 mb-5 mt-8 mt-md-5 mt-lg-0">
                    <ul class="nav flex-column bg-white border-radius-lg p-3 position-sticky top-10 shadow-lg">
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/Formulario/lista">
                                <i class="material-icons text-dark opacity-5 pe-2">widgets</i>
                                Formulários
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/Login/ListaDeUsuarios">
                                <i class="material-icons text-dark opacity-5 pe-2">cookie</i>
                                Usuários
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/Instituicao/ListaDeInstituicao">
                                <i class="material-icons text-dark opacity-5 pe-2">description</i>
                                Instituições
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/CadastroUsuario/Perfil">
                                <i class="material-icons text-dark opacity-5 pe-2">insert_link</i>
                                Perfil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/login">
                                <i class="material-icons text-dark opacity-5 pe-2">insert_link</i>
                                Sair
                            </a>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="col-lg-3 mb-lg-0 mb-5 mt-8 mt-md-5 mt-lg-0">
                    <ul class="nav flex-column bg-white border-radius-lg p-3 position-sticky top-10 shadow-lg">
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/formulario">
                                <i class="material-icons text-dark opacity-5 pe-2">widgets</i>
                                Formulário do Doador
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/CadastroUsuario/Perfil">
                                <i class="material-icons text-dark opacity-5 pe-2">insert_link</i>
                                Perfil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" data-scroll="" href="/login">
                                <i class="material-icons text-dark opacity-5 pe-2">insert_link</i>
                                Sair
                            </a>
                        </li>
                    </ul>
                </div>
            }

            <!--LISTA -->
            <div class="col-lg-9">
                <div class="card shadow-lg mb-5">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg p-3">
                            <h3 class="text-white mb-0">Lista de Instituições</h3>
                            <p class="text-white opacity-8 mb-0">Todos as instituições estão aqui!</p>
                        </div>
                    </div>

                    <div class="card-body p-5">
                        @if (Model.sucesso != null)
                        {
                            <div class="alert alert-success text-black text-center text-bolder">@Model.sucesso</div>
                        }
                        <div class="row">
                            <div class="col-12 text-end">
                                <a class="btn bg-gradient-success btn-icon" href="/Instituicao/Cadastrar">
                                    <div class="d-flex align-items-center">
                                        <i class="material-icons ms-2" aria-hidden="true">add</i>
                                        Adicionar
                                    </div>
                                </a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nome e Telefone</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Endereço</th>
                                        <th class="text-secondary opacity-7"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.instituicoes)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-xs">@Html.DisplayFor(modelItem => item.nome)</h6>
                                                        <p class="text-xs text-secondary mb-0">@Html.DisplayFor(modelItem => item.telefone)</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold"><a href="@item.link" target="_blank">@Html.DisplayFor(modelItem => item.endereco)</a></span>
                                            </td>
                                            <td class="align-middle">
                                                <a class="text-secondary font-weight-bold text-xs" asp-controller="Instituicao" asp-action="Editar" asp-route-id="@item.id">
                                                    Editar
                                                </a>

                                                <span class="ml-2 mr-2">|</span>
                                                <a href="#" class="text-secondary font-weight-bold text-xs" onclick="excluir(@item.id)">
                                                    Apagar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function excluir(id) {
        var resultado = confirm("Deseja realmente excluir a instituição?");
        if (resultado == true) {
            window.location.replace("/Instituicao/Apagar/" + id);
        }
    }
</script>