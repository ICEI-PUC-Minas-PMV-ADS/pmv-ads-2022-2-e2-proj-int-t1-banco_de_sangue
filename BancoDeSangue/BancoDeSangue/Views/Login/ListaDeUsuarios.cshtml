@model IEnumerable<BancoDeSangue.Models.UsuarioModel>

@{
    ViewData["Title"] = "ListaDeUsuarios";
}

<h1>ListaDeUsuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                <a asp-controller="CadastroUsuario" asp-action="Editar" asp-route-id="@item.email">Editar</a> |
                
                <a asp-controller="CadastroUsuario"asp-action="Apagar" asp-route-id="@item.email">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
