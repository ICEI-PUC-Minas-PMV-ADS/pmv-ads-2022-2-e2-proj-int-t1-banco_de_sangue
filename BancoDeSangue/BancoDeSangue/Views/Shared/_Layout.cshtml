                                <img src="https://exuberantsolutions.com/course_logo/jquery-icon.png" data-bs-toggle="tooltip" data-bs-placement="bottom" title="jQuery" height="60">
                            </a>
                        </div>
                        <div class="col-lg-2 col-4">
                            <a href="javascript:;">
                                <img src="https://prakashinfotech.com/files/catalog/technology/Technology/Front%20End/aspnet_logo.webp" title="ASP.NET" height="60">
                            </a>
                        </div>
                        <div class="col-lg-2 col-4">
                            <a href="javascript:;">
                                <img src="https://aleson-itc.com/wp-content/uploads/2020/03/sql-server-2019.png" title="SQL Server 2019" height="60">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/material-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
